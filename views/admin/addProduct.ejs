<%-include('../layouts/adminHeader.ejs')%>

    <style>
        body {
            font-family: Arial, sans-serif;
            /* margin: 20px; */
        }

        form {
            max-width: 600px;
            margin: 40px auto;
        }
    </style>
</head>

<body>

    <div class="admin_header">
        <div class="admin_logo">
            <img src="/assets/Frame.png" alt="milma-logo">
        </div>
        <div class="logout_button">
            <a href="/admin/logout">
                <button type="button" class="btn btn-danger">
                    Logout <i class="fas fa-sign-out-alt"></i>
                </button>
            </a>
        </div>
    </div>



    <div class="container-fluid">
        <h2 class="mb-4">Add Product</h2>

        <form  action="/admin/addProduct"
        method="post" enctype="multipart/form-data" >
            <div class="form-group">
                <label for="productName">Product Name:</label>
                <input type="text" class="form-control" name="productName" id="productName" placeholder="Enter product name">
            </div>
            <div class="form-group">
                <label for="price">Price:</label>
                <input type="text" class="form-control" name="price" id="price" placeholder="Enter price">
            </div>
            <div class="form-group">
                <label for="stock">Quantity:</label >
                <input type="text" class="form-control" name="quantity" id="stock" placeholder="Enter stock">
            </div>
            <div class="form-group">
                <label for="category">Category:</label>
                <select class="form-control" name="category" id="category">
                    <% category.forEach(function(category,index){ %>
                        <option value="<%=category.categoryName%>"><%=category.categoryName%>
                        </option>
                        <% }) %>
                    
                </select>
            </div>
            <div class="form-group">
                <label for="productImage">Product Image:</label>
                <input type="file" class="form-control-file" name="image" id="productImage" >
            </div>
            <button type="submit" class="btn btn-primary">Add Product</button>
        </form>
    </div>

    <%-include('../layouts/adminFooter.ejs')%>
