<%-include('../layouts/adminHeader.ejs')%>

    <style>
        body {
            font-family: Arial, sans-serif;
            /* margin: 20px; */
        }

        @media screen and (max-width: 768px) {
            .table-responsive {
                overflow-x: auto;
            }
        }

        @media screen and (max-width: 576px) {
            .table-responsive {
                border: 0;
            }

            th {
                display: none;
            }

            td {
                display: block;
                width: 100%;
            }

            tbody td {
                text-align: right;
            }

            th {
                text-align: left;
            }

            tbody td:before {
                content: attr(data-label);
                float: left;
                font-weight: bold;
                text-transform: uppercase;
            }
        }
    </style>
</head>

<body>

    <div class="admin_header">
        <div class="admin_logo">
            <img src="/assets/Frame.png" alt="milma-logo">
        </div>
        <div class="logout_button">
            <a href="/admin/logout">
                <button type="button" class="btn btn-danger">
                    Logout <i class="fas fa-sign-out-alt"></i>
                </button>
            </a>
        </div>
    </div>

    <div class="container-fluid">
        <div class="top">
            <h2 class="mb-4">Categories</h2>
            <a href="/admin/addCategory">
                <button type="button" class="btn btn-success mb-3">
                    <i class="fas fa-plus"></i> Add Category
                </button>
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <%data.forEach((data,index )=> { %>
                    <tr>
                        <td data-label="Category Name"><%=data.categoryName%></td>
                        <td data-label="Stock"><%=data.product_count%></td>
                        <td data-label="Actions">
                            <a href="/admin/editCategory"><button type="button" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i> Edit</button></a>
                            <a href="/admin/deleteCategory?id=<%=data._id%>"><button type="button" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Delete</button></a>
                        </td>
                    </tr>
                    <% });%>
                    <!-- Add more rows as needed -->
                </tbody>
            </table>
        </div>
    </div>

    <%-include('../layouts/adminFooter.ejs')%>

